<Application x:Class="Application"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:BAWGUI"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock" x:Key="NoItemsTextStyle">
            <Setter Property="Foreground" Value="#232323" />
            <Setter Property="FontStyle" Value="Italic" />
        </Style>
        <Style TargetType="ListView" x:Key="ChannelsListViewStyle">
            <Setter Property="Width" Value="405"></Setter>
            <Setter Property="MaxHeight" Value="150"></Setter>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"></Setter>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"></Setter>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"></Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="NoItemsTextBoxStyle">
            <Setter Property="Foreground" Value="#232323" />
            <Setter Property="FontStyle" Value="Italic" />
        </Style>
    </Application.Resources>
</Application>
