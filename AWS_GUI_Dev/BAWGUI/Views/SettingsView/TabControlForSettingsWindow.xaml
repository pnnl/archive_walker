<UserControl x:Class="TabControlForSettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BAWGUI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <TabControl Grid.Row="1" Margin="2" TabStripPlacement="Top" SelectedIndex="{Binding CurrentTabIndex}">
        <TabItem Header="Reader Properties">
            <local:ReadPropertiesTabInSettings/>
        </TabItem>
        <TabItem Header="Signal Selection and Manipulation">
            <local:DataConfigStagesTabInSettings/>
        </TabItem>
        <TabItem Header="Process Config">
            <local:ProcessConfigTabInSettings/>
        </TabItem>
        <TabItem Header="Post-Processing Customization">
            <local:PostProcessingConfigTabInSettings/>
        </TabItem>
        <TabItem Header="Detector Config">
            <local:DetectorConfigTabInSettings/>
        </TabItem>
    </TabControl>
</UserControl>
