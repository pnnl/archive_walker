                                                    <Setter Property="MenuItem.Command" Value="{Binding Path=DataContext.CustomizationSelected, RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}"/>
                                                    <Setter Property="MenuItem.CommandParameter">
                                                        <Setter.Value>
                                                            <MultiBinding Converter="{StaticResource AddCustomizationParameters}">
                                                                <Binding Path="Header" RelativeSource="{RelativeSource Mode=Self}"/>
                                                                <Binding Source="PostProcessConfig"/>
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </MenuItem.ItemContainerStyle>
                                        </MenuItem>
