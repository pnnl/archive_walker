                                                    </i:EventTrigger>
                                                    <i:EventTrigger EventName="GotFocus">
                                                        <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}, Path=DataContext.PostProcessConfigStepSelected}" CommandParameter="{Binding}"/>
