<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BAWGUI"        
        mc:Ignorable="d"
        Title="BPA Archive Walker GUI" Height="768" Width="1024" WindowState="Maximized">

    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Button ToolTip="Settings" Command="{Binding ShowSettingsWindow}" Height="100" Width="200">
            <Image Source="..\Images\settings24.png"/>
        </Button>
    </Grid>
</Window>
