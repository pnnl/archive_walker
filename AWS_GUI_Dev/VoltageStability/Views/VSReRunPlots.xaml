<UserControl x:Class="VoltageStability.Views.VSReRunPlots"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VoltageStability.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ItemsControl ItemsSource="{Binding VSReRunPlotModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Expander  IsExpanded="True">
                        <Expander.Header>
                            <TextBlock Text="{Binding Label, StringFormat=Site: {0}}"/>
                        </Expander.Header>
                        <local:VSReRunPlotView/>
                    </Expander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
