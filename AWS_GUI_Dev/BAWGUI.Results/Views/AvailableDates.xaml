<UserControl x:Class="BAWGUI.Results.Views.AvailableDates"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:BAWGUI.Results.Views"
             xmlns:converters="clr-namespace:BAWGUI.Results.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <!--<UserControl.Resources>
        <converters:DateDictionaryKeyConverter x:Key="DateDictionaryKeyConverter"/>
    </UserControl.Resources>-->
    <StackPanel Orientation="Horizontal">
        <Label Content="Available Result Dates: " Width="140" HorizontalContentAlignment="Left"/>
        <ComboBox ItemsSource="{Binding YearList}" SelectedValue="{Binding SelectedYear}"/>
        <ComboBox ItemsSource="{Binding MonthList}" SelectedValue="{Binding SelectedMonth}"/>
        <ComboBox ItemsSource="{Binding DayList}" SelectedValue="{Binding SelectedDay}"/>
    </StackPanel>
</UserControl>
