            <Button Grid.Column="2" Content="Add A Site" Command="{Binding AddASite}" Height="20" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" VerticalContentAlignment="Center"/>
        </Grid>
