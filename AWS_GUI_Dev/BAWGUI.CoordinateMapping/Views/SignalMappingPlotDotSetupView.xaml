                    </i:Interaction.Triggers>-->
        <TextBox Text="{Binding Locations[0].Name}" Margin="2" Width="150" IsReadOnly="True" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Name="From">
